---
import { Image } from "astro:assets";
const { title, description, icon, bgArt } = Astro.props;
---

<div class="process-card px-3 py-4 sm:px-4 sm:py-5 md:px-7 md:py-6 group relative flex flex-col overflow-hidden">
  <div class="process-icon mb-2 sm:mb-3 md:mb-4">
    <Image src={icon} alt={title} class={"w-[24px] sm:w-[28px] aspect-square md:w-12"} width={48} height={48} />
  </div>

  <h3
    class="process-title mb-1 md:mb-2 text-sm sm:text-base md:text-xl font-semibold text-white capitalize 2xl:text-2xl"
  >
    {title}
  </h3>

  <p class="process-description text-[10px] sm:text-xs md:text-sm text-white/90 leading-tight sm:leading-normal">
    {description}
  </p>

  <!-- Shine effect overlay -->
  <div class="shine-effect"></div>

  <!-- Background art -->
  <Image
    src={bgArt}
    alt={`${title} background`}
    class="process-bg-art"
    width={150}
    height={150}
  />
</div>

<style>
  .process-card {
    border-radius: 12px;
    min-height: 200px;
  }

  @media (min-width: 640px) {
    .process-card {
      min-height: 240px;
    }
  }

  @media (min-width: 768px) {
    .process-card {
      border-radius: 16px;
      min-height: 280px;
    }
  }

  .shine-effect {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.1) 50%,
      rgba(255, 255, 255, 0) 100%
    );
    transform: translateX(-100%);
    transition: transform 0s;
    pointer-events: none;
    z-index: 3;
  }

  @media (min-width: 1280px) {
    .process-card:hover .shine-effect {
      transform: translateX(100%);
      transition: transform 1s ease;
    }
  }
</style>
