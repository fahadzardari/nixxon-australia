---
import CaseStudyDefaultImage from "../../assets/work/green-nest.png";

interface Props {
  title?: string;
  description?: string;
  tags?: string[];
  image?: any;
  logo?: any;
  url?: string;
  type?: "featured" | "logo" | "website" | "mobile-app" | "video-animation";
}

const {
  title = "Green Nest Organic Hygiene & Skincare",
  description = "In A World Filled With Chemical-Heavy Cleaning Products, Green Nest Was Born To Offer A Gentle, Plant-Based Alternative. The Brand Focuses On Hygiene Products Infused With Organic Ingredients Like Aloe Vera, Tea Tree, And Lime.",
  tags = ["FMCG", "Personal Care", "Herbal Handwash"],
  image = CaseStudyDefaultImage,
  logo = null,
  url = "#",
  type = "featured",
} = Astro.props;
---

<a 
  href={url}
  class="case-study-card max-h-[1000px] w-full group block relative aspect-square rounded-3xl overflow-hidden transition-transform duration-300 hover:scale-[1.02] hover:shadow-2xl"
  style={`background: url('${image.src}') center center / cover no-repeat;`}
>
  <!-- Gradient Overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/20 to-black/60 group-hover:from-black/50 group-hover:to-black/70 transition-all duration-300"></div>
  
  <!-- Content Container -->
  <div class="relative h-full flex flex-col justify-between p-6 md:p-8 lg:p-10 text-white">
    
    <!-- Top Section: Title & Logo -->
    <div class="flex justify-between items-start gap-4">
      <div class="flex-1 max-w-2xl">
        <h3 class="text-2xl md:text-3xl lg:text-4xl font-semibold leading-tight mb-3 md:mb-4">
          {title}
        </h3>
        <p class="text-sm md:text-base lg:text-lg leading-relaxed opacity-90 line-clamp-3">
          {description}
        </p>
      </div>
      
      {logo && (
        <div class="flex-shrink-0 w-20 h-20 md:w-24 md:h-24 lg:w-28 lg:h-28">
          <img src={logo.src} alt={`${title} logo`} class="w-full h-full object-contain" />
        </div>
      )}
    </div>

    <!-- Bottom Section: Tags -->
    <div class="flex flex-wrap gap-2 md:gap-3">
      {tags.map((tag) => (
        <span class="px-4 py-2 md:px-5 md:py-2.5 bg-[#8067CE] hover:bg-[#9d7eff] rounded-full text-xs md:text-sm lg:text-base font-medium transition-colors duration-200">
          {tag}
        </span>
      ))}
    </div>
  </div>

  <!-- Hover Indicator -->
  <div class="absolute top-4 right-4 w-10 h-10 md:w-12 md:h-12 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 md:h-6 md:w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
    </svg>
  </div>
</a>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
